# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

resource_group_name = "rg-task-management-app"
location            = "East US"
environment         = "dev"

vnet_address_space      = ["10.0.0.0/16"]
subnet_address_prefixes = ["10.0.1.0/24"]

vm_size        = "Standard_B2s"
admin_username = "azureadmin"
# admin_password should be set via environment variable or secure input
# admin_password = "YourSecurePassword123!"

# ACR name must be globally unique and contain only alphanumeric characters
acr_name = "taskmanagementacr"
acr_sku  = "Basic"

tags = {
  Project     = "TaskManagementApp"
  ManagedBy   = "Terraform"
  Environment = "Development"
}
